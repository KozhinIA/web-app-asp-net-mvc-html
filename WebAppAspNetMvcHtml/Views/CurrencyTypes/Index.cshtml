@using WebAppAspNetMvcHtml.Models
@model List<CurrencyType>

<h3>Типы валют</h3>

@Html.ActionLink("Добавить запись", "Create", "CurrencyTypes")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Буквенный код
            </th>
            <th>
                Числовой код
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var currencyType in Model)
        {
        <tr>
            <td>
                @currencyType.Name
            </td>
            <td>
                @currencyType.LetterCode
            </td>
            <td>
                @currencyType.NumericCode
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "CurrencyTypes", new { id = currencyType.Id }, new { })
                @Html.ActionLink("Изменить", "Edit", "CurrencyTypes", new { id = currencyType.Id }, new { })
            </td>
        </tr>
        }
    </tbody>
</table>