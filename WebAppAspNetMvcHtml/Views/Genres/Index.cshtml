@using WebAppAspNetMvcHtml.Models
@model List<Genre>

<h3>Жанры</h3>

@Html.ActionLink("Добавить запись", "Create", "Genres")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>
                    @genre.Name
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", "Genres", new { id = genre.Id }, new { })
                    @Html.ActionLink("Изменить", "Edit", "Genres", new { id = genre.Id }, new { })
                </td>
            </tr>
        }
    </tbody>
</table>