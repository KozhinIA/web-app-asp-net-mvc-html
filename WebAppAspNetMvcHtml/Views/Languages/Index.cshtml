@using WebAppAspNetMvcHtml.Models
@model List<Language>

<h3>Языки</h3>

@Html.ActionLink("Добавить запись", "Create", "Languages")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var language in Model)
        {
            <tr>
                <td>
                    @language.Name
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", "Languages", new { id = language.Id }, new { })
                    @Html.ActionLink("Изменить", "Edit", "Languages", new { id = language.Id }, new { })
                </td>
            </tr>
        }
    </tbody>
</table>